<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    tools:context="com.example.trnclong.problem9.TabFragment1" >

<!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_weight="0.8"
        android:src="@drawable/huonghana"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:text="Huong Hoa Khoi"
        android:ems="10"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/editText" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/anvy"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingTop="50dp"
            android:text="An Vy FapTV"
            android:textSize="20sp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:textColor="#f00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/lanhuong"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingTop="50dp"
            android:text="Lan Huong"
            android:textSize="20sp"
            android:textColor="#ff00b7"
            android:ems="10"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>
